doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Dashboard
        link(rel="stylesheet", href="/css/styles.css")
        link(rel="stylesheet", href="/css/normalize.css")
        <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">
    body 
        include ./header    
         
        a(href='/dashboard') Volver  

        h2 Modificar Oferta
        section.container 
                form.containerForm(action=`/api/ads/?_method=PUT&currentOfferId=${offer._id}` method="POST")
                        label(for="title") Puesto
                        input#title(type='text' name='title' value=offer.title required='')
                        
                        label(for="companyName") Compañia
                        input#companyName(type='text' name='companyName' value=offer.companyName required='')
                        
                        label(for="description") Descripción
                        input#description(type='text' name='description' value=offer.description required='')
                        
                        label(for="salary") Salario
                        input#salary(type='number' name='salary' value=offer.salary required='')
                        
                        label(for="location") Localización
                        input#location(type='text' name='location' value=offer.location required='')
                        
                        label(for="URL") URL
                        input#URL(type='text' name='URL' value=offer.URL required='')

                        input#btnSignup(type="submit", value="Modificar Oferta")
                     
        script(src="/js/dropdown_menu.js") 